---
import { SITE_CONFIG } from '@/config/site';
---

<footer class="bg-gray-900 text-white py-12">
  <div class="container-custom">
    <div class="grid md:grid-cols-7 gap-8">
      <div class="md:col-span-3">
        <h3 class="text-2xl font-bold mb-4">{SITE_CONFIG.name}</h3>
        <p class="text-gray-300 mb-4 max-w-md">
          {SITE_CONFIG.description}
        </p>
      </div>

      <div class="md:col-span-2">
        <h4 class="text-lg font-semibold mb-4">Quick Links</h4>
        <ul class="space-y-2">
          <li>
            <a href="/" class="footer-link">Home</a>
          </li>
          <li>
            <a href="/what-to-expect" class="footer-link">What to Expect</a>
          </li>
          <li>
            <a href="/locations" class="footer-link">Locations</a>
          </li>
          <li>
            <a href="/contact" class="footer-link">Contact</a>
          </li>
          <li>
            <a href="/book" class="footer-link">Book Now</a>
          </li>
        </ul>
      </div>

      <div class="md:col-span-2">
        <h4 class="text-lg font-semibold mb-4">Contact Info</h4>
        <div class="space-y-3 text-gray-300">
          <div class="flex items-start gap-3">
            <span class="text-lg flex-shrink-0 mt-0.5">üìû</span>
            <span class="break-all">{SITE_CONFIG.contact.phone}</span>
          </div>
          <div class="flex items-start gap-3">
            <span class="text-lg flex-shrink-0 mt-0.5">‚úâÔ∏è</span>
            <span class="break-all">{SITE_CONFIG.contact.email}</span>
          </div>
          <div class="flex items-start gap-3">
            <span class="text-lg flex-shrink-0 mt-0.5">üìç</span>
            <span class="break-words">{SITE_CONFIG.contact.address}</span>
          </div>
        </div>
      </div>
    </div>

    <div class="border-t border-gray-700 mt-8 pt-8 text-center text-gray-400">
      <p>
        &copy; {new Date().getFullYear()}
        {SITE_CONFIG.name}. All rights reserved.
      </p>
    </div>
  </div>
</footer>

<style>
  .footer-link {
    @apply text-gray-200 hover:text-white transition-colors;
  }
</style>
