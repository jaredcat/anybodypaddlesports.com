---
export interface Props {
  title: string;
  description: string;
  primaryButtonText?: string;
  primaryButtonLink?: string;
  showContactButton?: boolean;
  sectionId?: string;
}

const {
  title,
  description,
  primaryButtonText = 'Book Your Adventure',
  primaryButtonLink = '/book',
  showContactButton = true,
  sectionId,
} = Astro.props;
---

<section class="section-padding bg-primary-600" aria-labelledby={sectionId}>
  <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
    <h2 id={sectionId} class="text-3xl md:text-4xl font-bold text-white mb-6">
      {title}
    </h2>
    <p class="text-xl text-white opacity-90 mb-8 max-w-2xl mx-auto">
      {description}
    </p>
    <div class="flex flex-col sm:flex-row gap-4 justify-center">
      <a
        href={primaryButtonLink}
        class="inline-block bg-white text-primary-700 hover:bg-gray-100 px-8 py-4 rounded-lg text-lg font-semibold transition-colors focus:outline-none focus:ring-2 focus:ring-white focus:ring-offset-2 focus:ring-offset-primary-600"
        data-astro-prefetch="viewport">
        {primaryButtonText}
      </a>
      {
        showContactButton && (
          <a
            href="/contact"
            class="inline-block border-2 border-white text-white hover:bg-white hover:text-primary-700 px-8 py-4 rounded-lg text-lg font-semibold transition-colors focus:outline-none focus:ring-2 focus:ring-white focus:ring-offset-2 focus:ring-offset-primary-600"
            data-astro-prefetch>
            Contact Us
          </a>
        )
      }
    </div>
  </div>
</section>
