---
// Enable static generation for this page
export const prerender = true;

import videoPoster from '@/assets/images/Anybody-Paddlesports-Sample-Video-poster.png';
import tualatinRiver from '@/assets/images/Tualatin-RIver-Tualatin-Community-Park.jpg';
import CallToAction from '@/components/CallToAction.astro';
import Hero from '@/components/Hero.astro';
import Icon from '@/components/Icon.astro';
import Layout from '@/components/Layout.astro';
import Newsletter from '@/components/Newsletter.astro';
import { SITE_CONFIG } from '@/config/site';
import { Image } from 'astro:assets';
---

<Layout
  title={`${SITE_CONFIG.name} - Paddle Board Tours & Rentals`}
  description="Professional paddle board tours and equipment rentals. Experience the beauty of local waterways with certified instructors and top-quality gear."
  keywords="paddle board tours, paddleboard rentals, SUP tours, stand up paddleboard, water sports, Los Angeles paddleboarding, California SUP tours, paddle board lessons, guided tours"
  schemaType="LocalBusiness">
  <!-- Hero Section -->
  <Hero
    title="Paddle Board Adventures"
    subtitle="Tours & Rentals"
    description="Experience the beauty of local waterways with professional guides and top-quality equipment"
    ctaText="Book Your Adventure"
    ctaLink="/book"
    iconName="logo"
    backgroundVideoLocal="/paddleboard-loop"
  />

  <!-- Why Choose Us Section -->
  <section class="section-padding bg-gray-50" aria-labelledby="why-choose-us">
    <div class="container-custom">
      <div class="text-center mb-16">
        <h2
          id="why-choose-us"
          class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">
          Why Choose AnyBody Paddlesports?
        </h2>
        <p class="text-xl text-gray-700 max-w-2xl mx-auto">
          We provide safe, flexible, and memorable paddle boarding experiences
          for everyone
        </p>
      </div>

      <div class="grid md:grid-cols-3 gap-8 lg:gap-12">
        <!-- Safety -->
        <article class="text-center">
          <div
            class="w-16 h-16 bg-primary-600 rounded-full flex items-center justify-center mx-auto mb-6"
            aria-hidden="true">
            <Icon name="shield-check" size="lg" class="text-white" />
          </div>
          <h3 class="text-2xl font-bold text-gray-900 mb-4">Safety First</h3>
          <p class="text-gray-700 leading-relaxed">
            Our helpful and fun-loving instructors are professionally trained
            and equipped with top-of-the-line gear to keep you safe during your
            experience. We've got you covered, so you don't need to worry about
            anything but getting wet!
          </p>
        </article>

        <!-- Flexibility -->
        <article class="text-center">
          <div
            class="w-16 h-16 bg-accent-600 rounded-full flex items-center justify-center mx-auto mb-6"
            aria-hidden="true">
            <Icon name="bolt" size="lg" class="text-white" />
          </div>
          <h3 class="text-2xl font-bold text-gray-900 mb-4">
            Ultimate Flexibility
          </h3>
          <p class="text-gray-700 leading-relaxed">
            You have control over your trip. With our unique company mobility,
            AnyBody Paddlesports allows you to utilize almost any body of water.
            We offer multiple levels of personal training (beginner to
            advanced), options for a variety of waterborne games, and flexible
            hours means the fun lasts as long as you want!
          </p>
        </article>

        <!-- Capture Memories -->
        <article class="text-center">
          <div
            class="w-16 h-16 bg-primary-600 rounded-full flex items-center justify-center mx-auto mb-6"
            aria-hidden="true">
            <Icon name="video-camera" size="lg" class="text-white" />
          </div>
          <h3 class="text-2xl font-bold text-gray-900 mb-4">
            Capture Memories
          </h3>
          <p class="text-gray-700 leading-relaxed">
            Share your experience with a custom video made for you. Your group
            has the option to wear cameras on a helmet, chest, paddle, or board
            mount. We use the footage to create a one-of-a-kind video for you
            and your group to treasure.
            <span class="text-sm italic text-gray-600"
              >*Additional fee for video</span
            >
          </p>
        </article>
      </div>
    </div>
  </section>

  <!-- Locations Preview Section -->
  <section class="section-padding" aria-labelledby="explore-locations">
    <div class="container-custom">
      <div class="text-center mb-16">
        <h2
          id="explore-locations"
          class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">
          Explore Our Locations
        </h2>
        <p class="text-xl text-gray-700 max-w-2xl mx-auto">
          Discover beautiful paddle boarding destinations across the region
        </p>
      </div>

      <div class="grid md:grid-cols-2 gap-12 items-center">
        <div>
          <h3 class="text-2xl font-bold text-gray-900 mb-6">
            Multiple Scenic Destinations
          </h3>
          <ul class="space-y-4" role="list">
            <li class="flex items-start space-x-3">
              <div
                class="w-2 h-2 bg-primary-600 rounded-full mt-2 flex-shrink-0"
                aria-hidden="true">
              </div>
              <p class="text-gray-700">
                Calm waters perfect for beginners at Tualatin Community Park
              </p>
            </li>
            <li class="flex items-start space-x-3">
              <div
                class="w-2 h-2 bg-primary-600 rounded-full mt-2 flex-shrink-0"
                aria-hidden="true">
              </div>
              <p class="text-gray-700">
                Wide open spaces at Silverton Reservoir surrounded by green
                scenery
              </p>
            </li>
            <li class="flex items-start space-x-3">
              <div
                class="w-2 h-2 bg-primary-600 rounded-full mt-2 flex-shrink-0"
                aria-hidden="true">
              </div>
              <p class="text-gray-700">
                Mountain elevation adventures at North Fork Estacada Reservoir
              </p>
            </li>
            <li class="flex items-start space-x-3">
              <div
                class="w-2 h-2 bg-primary-600 rounded-full mt-2 flex-shrink-0"
                aria-hidden="true">
              </div>
              <p class="text-gray-700">
                Interactive map to explore all available locations
              </p>
            </li>
          </ul>
          <div class="mt-8">
            <a href="/locations" class="btn-primary" data-astro-prefetch>
              View All Locations
            </a>
          </div>
        </div>

        <div class="relative">
          <Image
            src={tualatinRiver}
            alt="Beautiful paddle boarding location with calm waters at Tualatin Community Park"
            class="rounded-lg shadow-lg w-full h-80 object-cover"
            width={800}
            height={320}
            format="webp"
            quality={85}
          />
          <div
            class="absolute inset-0 bg-gradient-to-t from-black/20 to-transparent rounded-lg"
            aria-hidden="true">
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Video Section -->
  <section class="section-padding bg-gray-900" aria-labelledby="see-adventure">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12">
        <h2
          id="see-adventure"
          class="text-3xl md:text-4xl font-bold text-white mb-4">
          See the Adventure
        </h2>
        <p class="text-xl text-gray-200">
          Watch what makes our paddle boarding experiences special
        </p>
      </div>

      <div class="relative rounded-lg overflow-hidden shadow-2xl">
        <video
          controls
          poster={videoPoster.src}
          class="w-full h-auto"
          preload="metadata"
          aria-describedby="video-description">
          <source
            src="/Anybody-Paddlesports-Sample-Video-1080p.mp4"
            type="video/mp4"
          />
          <track
            kind="captions"
            src="/captions/paddleboard-video-en.vtt"
            srclang="en"
            label="English captions"
            default
          />
          Your browser does not support the video tag.
        </video>
        <div id="video-description" class="sr-only">
          Promotional video showing paddle boarding activities, scenic water
          locations, and group experiences with AnyBody Paddlesports instructors
          and equipment.
        </div>
      </div>
    </div>
  </section>

  <!-- Call to Action -->
  <CallToAction
    title="Ready for Your Adventure?"
    description="Book your paddle boarding experience today and create memories that will last a lifetime"
    primaryButtonText="Book a Tour"
    sectionId="ready-for-adventure"
  />

  <Newsletter />
</Layout>
